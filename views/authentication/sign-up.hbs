<div class="bg-green">

    <form class="card mx-autoauth-form w-25 mx-auto" action="/authentication/sign-up" method="POST" enctype="multipart/form-data">
        <label for="input-name">Name</label>
        <input type="text" id="input-name" name="name" placeholder="Your Name" />
        <label for="input-email">Email</label>
        <input type="email" id="input-email" name="email" placeholder="Your Email" />
        <label for="input-password">Password</label>
        <input type="password" name="password" id="input-password" placeholder="A Strong Password" />



        <label for="role">client</label>
        <input type="radio" id="client" value="client" name="role">
        <label for="role">seller</label>
        <input type="radio" id="seller" value="seller" name="role">

        <label for="photo">photo</label>
        <input type="file" id="photo" value="photo" name="photo">

        <button class="btn btn-primary">Sign Up</button>
    </form>

</div>